{% extends 'base.djt' %}

{% block title %}Organizations - {{ block.super }}{% endblock %}

{% block meta-description %}Use the UCF Campus Map to find Organizations {{ block.super }}{% endblock %}

{% block rel-canonical %}{{ base_url }}{% url 'organizations' %}{% endblock %}

{% block wrap %}

	<h2> Organizations </h2>
	{% if error %}
		<div class="error">{{ error }}</div>
	{% else %}
	<div class="span-12">
		<ul class="orgs">
		{% for o in orgs_one %}
			<li><a href="{% url 'locations' %}{{ o.bldg.id }}/{{ o.bldg.name|slugify }}/?org={{ o.id }}">{{ o.name }}</a></li>
		{% endfor %}
		</ul>
	</div>
	<div class="span-11 last">
		<ul class="orgs">
		{% for o in orgs_two %}
			<li><a href="{% url 'locations' %}{{ o.bldg.id }}/{{ o.bldg.name|slugify }}/?org={{ o.id }}">{{ o.name }}</a></li>
		{% endfor %}
		</ul>
	</div>
	<div class="clear"></div>
	{% endif %}

{% endblock %}
